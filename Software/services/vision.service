#-----------------------------------------------------------------
# Vision Processing Service
#-----------------------------------------------------------------
[Unit]
Description=Vision Processing
After=network.target

[Service]
Type=simple
User=pi
ExecStart=/home/pi/prog/software/build/vision
KillMode=process
TimeoutStopSec=10

# Resource Limits
CPUQuota=60%
MemoryMax=256M
MemorySwapMax=64M
IOWeight=150 
Nice=-20 


#Filesystem Access
ReadOnlyPaths=/home/pi/prog/software/


[Install]
WantedBy=multi-user.target